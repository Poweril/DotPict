<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.houandli.dotpic.activity_edit"
    tools:showIn="@layout/app_bar_activity_edit">

    <GridLayout
        android:id="@+id/canvas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:numColumns="auto_fit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/c1_1"
            android:background="#0ff"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"
            android:onClick="dot" />
        <ImageView
            android:id="@+id/c1_2"
            android:background="#0fe"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c1_3"
            android:background="#0fd"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c1_4"
            android:background="#0fc"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>

        <ImageView
            android:id="@+id/c2_1"
            android:background="#0fb"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c2_2"
            android:background="#0fa"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c2_3"
            android:background="#0f9"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c2_4"
            android:background="#0f8"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>

        <ImageView
            android:id="@+id/c3_1"
            android:background="#0f7"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c3_2"
            android:background="#0f6"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c3_3"
            android:background="#0f5"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c3_4"
            android:background="#0f4"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>

        <ImageView
            android:id="@+id/c4_1"
            android:background="#0f3"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c4_2"
            android:background="#0f2"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c4_3"
            android:background="#0f1"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>
        <ImageView
            android:id="@+id/c4_4"
            android:background="#0f0"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"/>

    </GridLayout>

    <RadioGroup
        android:id="@+id/pens"
        android:checkedButton="@+id/pen_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/canvas"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Btndot"
        android:orientation="horizontal"
        android:weightSum="16">

        <RadioButton
            android:id="@+id/pen_5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/ic_pen_5"
            android:onClick="pens" />

        <RadioButton
            android:id="@+id/pen_6"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/ic_pen_6"
            android:onClick="pens" />

        <RadioButton
            android:id="@+id/pen_7"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/ic_pen_7"
            android:onClick="pens" />

        <RadioButton
            android:id="@+id/pen_8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/ic_pen_8"
            android:onClick="pens" />

        <RadioButton
            android:id="@+id/pen_9"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/ic_pen_9"
            android:onClick="pens" />

    </RadioGroup>

    <Button
        android:id="@+id/Btndot"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="Btndot" />

</android.support.constraint.ConstraintLayout>
